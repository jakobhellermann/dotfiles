{
  "theme": "VSCode Dark Modern",
  "buffer_font_family": ".ZedMono",

  "vim_mode": true,
  "relative_line_numbers": "disabled",
  "autosave": "on_focus_change",

  // remove unwanted features
  "title_bar": {
    "show_sign_in": false,
  },
  "auto_update": false,
  "terminal": {
    "button": false,
    "shell": "system",
    "detect_venv": "off",
    "toolbar": {
      "breadcrumbs": false,
    },
    "dock": "bottom",
    "option_as_meta": true,
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
    "button": true,
    "enabled": true,
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "session": {
    "trust_all_worktrees": true,
  },

  // UI
  "indent_guides": {
    "enabled": false,
  },
  "cursor_blink": false,
  "gutter": {
    "folds": false,
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.settings",
    "**/.venv",
    "**/.jj",
    "**/.idea",
  ],

  // language config
  "file_types": {
    // "JSON": [".prettierrc"]
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"],
        },
      },
      "language_servers": ["ty", "!basedpyright", "..."],
    },
    "JSONC": {
      "show_edit_predictions": false,
    },
    "TypeScript": {
      "formatter": "prettier",
      "language_servers": ["ty", "!basedpyright", "..."],
    },
    "Nix": {
      "language_servers": ["nixd"],
    },
    "XML": { "format_on_save": "off" },
    "Beancount": { "format_on_save": "off" },

    // oxc
    "CSS": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "HTML": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "JavaScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
        {
          "code_action": "source.fixAll.oxc",
        },
      ],
    },

    "JSON": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "JSONC": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },

    "Markdown": {
      "format_on_save": "off",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "TypeScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "TSX": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },

    "YAML": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
  },

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50,
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null,
    },
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // "check": { "command": "clippy" }
      },
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemas": {
            "https://raw.githubusercontent.com/kaitai-io/ksy_schema/master/ksy_schema.json": [
              "*.ksy",
            ],
          },
        },
      },
    },
    /*"oxlint": {
      "initialization_options": {
        "settings": {
          "configPath": null,
          "run": "onType",
          "disableNestedConfig": false,
          "fixKind": "safe_fix",
          "typeAware": true,
          "unusedDisableDirectives": "deny",
        },
      },
    },
    "oxfmt": {
      "initialization_options": {
        "settings": {
          "configPath": null,
          "run": "onSave",
        },
      },
    },*/
  },
  "extend_comment_on_newline": false,
}
