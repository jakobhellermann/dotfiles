{
  "theme": "Ayu Dark",
  // "ui_font_family": "Recursive Sans Linear Static",
  // "buffer_font_family": "JetBrains Mono",
  "buffer_font_family": "Recursive Mono Linear Static",

  "vim_mode": true,
  "relative_line_numbers": false,
  "autosave": "on_focus_change",

  // remove unwanted features
  "auto_update": false,
  "terminal": {
    "button": false,
    "shell": "system",
    "detect_venv": "off",
    "toolbar": {
      "breadcrumbs": false
    },
    "dock": "bottom"
  },
  "chat_panel": {
    "button": "never"
  },
  "agent": {
    "version": "2",
    "button": false,
    "enabled": false
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // UI
  "indent_guides": {
    "enabled": false
  },
  "cursor_blink": false,
  "gutter": {
    "code_actions": false,
    "folds": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.settings",
    "**/.venv",
    "**/.jj",
    "**/.idea"
  ],

  // language config
  "file_types": {
    "JSON": [".prettierrc"]
  },
  "languages": {
    "Markdown": {
      "format_on_save": "off"
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      }
    },
    "JSONC": {
      "show_edit_predictions": false
    },
    "TypeScript": {
      "formatter": "prettier"
    }
  },

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    },
    "cargo": null
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // "check": { "command": "clippy" }
      }
    }
  }
}
