{
  "theme": "Ayu Dark",
  // "ui_font_family": "Recursive Sans Linear Static",
  // "buffer_font_family": "JetBrains Mono",
  "buffer_font_family": "Recursive Mono Linear Static",

  "vim_mode": true,
  "relative_line_numbers": false,
  "autosave": "on_focus_change",

  // remove unwanted features
  "title_bar": {
    "show_sign_in": false,
  },
  "auto_update": false,
  "terminal": {
    "button": false,
    "shell": "system",
    "detect_venv": "off",
    "toolbar": {
      "breadcrumbs": false,
    },
    "dock": "bottom",
    "option_as_meta": true,
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
    "button": true,
    "enabled": true,
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  // UI
  "indent_guides": {
    "enabled": false,
  },
  "cursor_blink": false,
  "gutter": {
    "folds": false,
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.settings",
    "**/.venv",
    "**/.jj",
    "**/.idea",
  ],

  // language config
  "file_types": {
    // "JSON": [".prettierrc"]
  },
  "languages": {
    "Markdown": {
      "format_on_save": "off",
    },
    "Python": {
      "format_on_save": "off",
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"],
        },
      },
    },
    "JSONC": {
      "show_edit_predictions": false,
    },
    "TypeScript": {
      "formatter": "prettier",
    },
    "Nix": {
      "language_servers": ["nixd"],
    },
    "XML": { "format_on_save": "off" },
  },

  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50,
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null,
    },
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // "check": { "command": "clippy" }
      },
    },
  },
  "extend_comment_on_newline": false,
}
