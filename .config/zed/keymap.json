[
  {
    "bindings": {
      "ctrl-w ctrl-w": "pane::CloseActiveItem",
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-shift-enter": "workspace::NewTerminal",
      "ctrl-f": "vim::Search",
      "f1": "command_palette::Toggle",
      "ctrl-shift-รถ": "terminal_panel::ToggleFocus",
      "ctrl-รถ": "terminal_panel::ToggleFocus",
      "ctrl-shift-`": "terminal_panel::ToggleFocus",
      "ctrl-t": "project_symbols::Toggle"
    }
  },

  {
    "context": "Terminal",
    "bindings": {
      "ctrl-d": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-v": "markdown::OpenPreviewToTheSide"
    }
  },
  {
    "context": "Editor && (vim_mode==normal||vim_mode==visual) && !menu",
    "bindings": {
      "shift-space": "editor::SelectLargerSyntaxNode",
      "space": "editor::SelectSmallerSyntaxNode",
      "shift-h": "pane::GoBack",
      "shift-l": "pane::GoForward",
      "alt-h": "pane::GoBack",
      "alt-l": "pane::GoForward"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "g I": "editor::GoToImplementation"
    }
  },

  {
    // disable some netrw stuff
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-p": "file_finder::Toggle",

      "n": "project_panel::NewFile",
      "shift-n": "project_panel::NewDirectory",

      "h": "project_panel::SelectParent",
      "l": "project_panel::ExpandSelectedEntry",
      "shift-h": "project_panel::CollapseSelectedEntry",
      "shift-l": "project_panel::ExpandSelectedEntry",

      "%": null,
      "d": null,
      "o": null,
      "t": null,
      "v": null,
      "p": null,
      "-": null
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-1": ["pane::ActivateItem", 0],
      "ctrl-2": ["pane::ActivateItem", 1],
      "ctrl-3": ["pane::ActivateItem", 2],
      "ctrl-4": ["pane::ActivateItem", 3],
      "ctrl-5": ["pane::ActivateItem", 4],
      "ctrl-6": ["pane::ActivateItem", 5],
      "ctrl-7": ["pane::ActivateItem", 6],
      "ctrl-8": ["pane::ActivateItem", 7],
      "ctrl-9": ["pane::ActivateItem", 8],
      "ctrl-0": "pane::ActivateLastItem"
    }
  }
]
